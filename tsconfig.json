{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
  ],
}
